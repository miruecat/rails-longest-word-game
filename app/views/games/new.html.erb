<h1>New game</h1>


<% @letters.each do |letter| %>
<p><%= letter %></p>
<% end %>

<form action="score" method="get">
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="What is the longest word you can find?">
  <input type="submit">
</form>
